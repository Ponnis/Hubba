<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/achievementTitleText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:text="TEST"
        android:layout_alignParentRight="true"
        />
    <ImageView
        android:id="@+id/AchivementShownImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/achievementTitleText"
        app:layout_constraintBottom_toBottomOf="@id/achievementTitleText"
        app:layout_constraintRight_toRightOf="@+id/achievementTitleText"

        android:paddingRight="10dp"
        android:paddingLeft="10dp"

        android:contentDescription="@null" />



</android.support.constraint.ConstraintLayout>